<% if(msg && msg.length) {%>
    <div class="alert alert-success offset-2 col-6 alert-dismissible fade show" role="alert">
        <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
        <% if(err && err.length) {%>
            <div class="alert alert-danger offset-2 col-6 alert-dismissible fade show" role="alert">
                <%= err %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>